# Database Configuration
# For Docker PostgreSQL (recommended for local development)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/mydb"

# Connection retry settings (optional - defaults shown)
DB_MAX_RETRIES=5
DB_RETRY_BASE_DELAY=1000
DB_CONNECTION_TIMEOUT=10000
DB_POOL_SIZE=10

# Auth secret for better-auth
AUTH_SECRET="your-secret-key-change-in-production-use-a-long-random-string"

# Base URL for better-auth callbacks and redirects
BETTER_AUTH_URL="http://localhost:3000"